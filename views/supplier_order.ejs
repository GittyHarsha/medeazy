<%- include('partials/header'); %>
<title>Orders</title>
<script type="text/javascript" src="/js/alerts.js" defer></script>
<%- include('partials/layout'); %>
<style>
  table {
  column-gap: 10px;
  column-width: 50px;
  width: 600px;
}
</style>
<!-- ======= Breadcrumbs Section ======= -->
<section class="breadcrumbs">
  <div class="container">

    <div class="d-flex justify-content-between align-items-center">
      <h2>Orders</h2>
      <ol>
        <li><a href="/<%=  locals.ctype %>">Home</a></li>
        <li>Orders</li>
      </ol>
    </div>

  </div>
</section><!-- End Breadcrumbs Section -->
<main>
  <div class="container-flex">
    <h2>Orders</h2>
    <%- include('partials/alert') %>
    <div>
      <h3>Pending</h3>
      <% if (pending.length == 0) { %>
        <p>Empty</p>
      <% } %>
      <div class="accordion" id="pendings">
        <% for (let i = 0; i < pending.length; i++) { const order = pending[i] %>
          <div class="accordion-item" style="width: 30vw;">
            <p class="accordion-header" tabindex="0">
              <button type="button" class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#pending<%= i %>" aria-expanded="false" aria-controls="#pending<%= i %>" id="heading<%= i %>">Order <%= i + 1 %></button>
            </p>
            <div class="accordion-collapse collapse" id="pending<%= i %>" aria-labelledby="heading<%= i %>" data-bs-parent="#pendings">
              <div class="accordion-body" style="width: auto;">
                <ul class="dll">
                  <li><span>Retailer id: </span><span><%= order['Retailer_id']%></span></li>
                  <table>
                    <tr>
                      <td>Medicine Name</td> <td>Quantity</td> <td>Price</td> <td>Order_date</td>
                    </tr>
                  <% for(var items of order.items) { %>
                      <tr>
                        <td><%=items['Medicine_name']%></td>
                        <td><%=items['Quantity']%></td>
                        <td><%=items['price']%></td>
                        <td><%=items['Order_date'].toDateString()%></td>
                      </tr>

                <%  } %>
                  </table>
                </ul>
                
                <p class="row">
                  <a type="button" href="/supplier/orders/complete?tno=<%=order['transaction_no']%>" class="btn-finish button small col-md-5 col-7" data-oid="<%= order['transaction_no'] %>">Complete</a>
                  <a type="button" class="btn-cancel button small col-md-5 col-7" data-oid="<%= order['transaction_no'] %>">Cancel</a>
                </p>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    <div>
      <h3>Completed</h3>
      <% if (completed.length == 0) { %>
        <p>Empty</p>
      <% } %>
      <div class="accordion" id="cplts">
        <% for (let i = 0; i < completed.length; i++) { const order = completed[i] %>
          <div class="accordion-item">
            <p class="accordion-header" tabindex="0">
              <button type="button" class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#cplt<%= i %>" aria-expanded="false" aria-controls="#cplt<%= i %>" id="heading<%= i %>">Order <%= i + 1 %></button>
            </p>
            <div class="accordion-collapse collapse" id="cplt<%= i %>" aria-labelledby="heading<%= i %>" data-bs-parent="#cplts">
              <div class="accordion-body">
                <ul class="dll">
                  <li><span>Retailer id: </span><span><%= order['Retailer_id']%></span></li>
                  <table>
                    <tr>
                      <td>Medicine Name</td> <td>Quantity</td> <td>Price</td> <td>Order_date</td>
                    </tr>
                  <% for(var items of order.items) { %>
                      <tr>
                        <td><%=items['Medicine_name']%></td>
                        <td><%=items['Quantity']%></td>
                        <td><%=items['price']%></td>
                        <td><%=items['Order_date'].toDateString()%></td>
                      </tr>

                <%  } %>
                  </table>
                </ul>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    <div>
      <h3>Cancelled</h3>
      <% if (cancelled.length == 0) { %>
        <p class="center">Empty</p>
      <% } %>
      <div class="accordion" id="cancels">
        <% for (let i = 0; i < cancelled.length; i++) { const order = cancelled[i] %>
          <div class="accordion-item">
            <p class="accordion-header" tabindex="0">
              <button type="button" class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#cancel<%= i %>" aria-expanded="false" aria-controls="#cancel<%= i %>" id="heading<%= i %>">Order <%= i + 1 %></button>
            </p>
            <div class="accordion-collapse collapse" id="cancel<%= i %>" aria-labelledby="heading<%= i %>" data-bs-parent="#cancels">
              <div class="accordion-body">
                <ul class="dll">
                  <li><span>Retailer id: </span><span><%= order['Retailer_id']%></span></li>
                  <table>
                    <tr>
                      <td>Medicine Name</td> <td>Quantity</td> <td>Price</td> <td>Order_date</td>
                    </tr>
                  <% for(var items of order.items) { %>
                      <tr>
                        <td><%=items['Medicine_name']%></td>
                        <td><%=items['Quantity']%></td>
                        <td><%=items['price']%></td>
                        <td><%=items['Order_date'].toDateString()%></td>
                      </tr>

                <%  } %>
                  </table>
                </ul>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    <div class="row">
      <a href="/<%=  locals.ctype %>/orders/add" class="button">Add order</a>
    </div>
  </div>
</main>
<%- include('partials/footer') %>
